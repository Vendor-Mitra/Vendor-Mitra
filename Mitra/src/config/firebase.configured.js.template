  console.warn('üìñ See FIREBASE_SETUP_INSTRUCTIONS.md for setup guide')
} else {
  try {
    // Initialize Firebase
    app = initializeApp(firebaseConfig)
    
    // Initialize Firestore
    db = getFirestore(app)
    
    // Initialize Auth
    auth = getAuth(app)
    
    console.log('‚úÖ Firebase initialized successfully')
    console.log('üî• Cross-device sync enabled!')
  } catch (error) {
    console.error('‚ùå Firebase initialization error:', error)
