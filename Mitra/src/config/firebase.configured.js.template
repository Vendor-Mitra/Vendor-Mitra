// Check if Firebase is configured
const isConfigured = firebaseConfig.apiKey !== "YOUR_API_KEY_HERE"

let app = null
let db = null
let auth = null

if (!isConfigured) {
  console.warn('‚ö†Ô∏è Firebase not configured. Using localStorage fallback.')
